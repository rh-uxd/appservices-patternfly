{
  "description": "Redhat UXD Integration Components",
  "repository": "https://github.com/rh-uxd/integration.git",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@patternfly/react-core",
      "**/@patternfly/react-core/**",
      "**/patternfly"
    ]
  },
  "scripts": {
    "clean": "lerna run clean",
    "build": "lerna run build",
    "buildDoc": "lerna run buildDoc",
    "start:dev": "lerna run start:dev",
    "start:demo": "lerna run start:demo",
    "start:demo2": "PORT=3006 lerna run start:demo"
  },
  "devDependencies": {
    "@patternfly/react-core": "^4.18.5",
    "@patternfly/react-icons": "^4.3.5",
    "@patternfly/react-styles": "^4.3.4",
    "@testing-library/jest-dom": "^4.1.1",
    "@testing-library/react": "^9.3.0",
    "@types/jest" : "25.2.3",
    "@types/react": "^16.9.41",
    "@types/react-dom": "^16.9.8",
    "@types/react-router": "^5.1.1",
    "@types/react-router-dom": "^5.1.0",
    "eslint-plugin-react-hooks": "^2.1.2",
    "lerna": "3.20.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "tsdx": "^0.13.2",
    "tslib": "^2.0.0",
    "typescript": "^3.9.6"
  },
  "name": "rh-uxd-integration",
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 6,
      "ecmaFeatures": {
        "modules": true
      },
      "jsx": true,
      "useJSXTextNode": true,
      "sourceType": "module"
    },
    "extends": [
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "plugins": [
      "@typescript-eslint",
      "react-hooks"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    }
  }
}
